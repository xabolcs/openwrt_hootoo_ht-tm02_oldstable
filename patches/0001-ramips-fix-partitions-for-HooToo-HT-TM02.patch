+
+	virtual_flash {
+		compatible = "mtd-concat";
+
+		devices = <&rootfs1 &rootfs2>;
+
+		partitions {
+			compatible = "fixed-partitions";
+			#address-cells = <1>;
+			#size-cells = <1>;
+
+			partition@0 {
+				label = "rootfs";
+				reg = <0x0 0x0>;
